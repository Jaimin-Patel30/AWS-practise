<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-2.1.1.js"></script>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
    <title>Simple deploy of app with EC2</title>
</head>
<body>
    <h1>Hello World</h1>
    <div id="tweet-container">
    </div>
</body>
<script type="text/javascript">
    const socket = io('http://localhost:3300');
    socket.on('tweets', function(tweet){
        console.log(tweet);
        const html = '<div class="row"> <div class="container"> <img class="avatar pull-left" src="'+tweet.user.profile_image_url+'"> <h5>'+tweet.user.screen_name+'</h5> <span>'+tweet.user.description+'</span> </div> </div>';
        $("#tweet-container").prepend(html);
    })
</script>
</html>